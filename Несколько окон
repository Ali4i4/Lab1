#include <iostream>

using namespace std;

int main()
{
    string a, b;
    a = "   |";
    b = "|\n";
    int shir;
    int s = 0;
    int i; // подсчет пробелов
    int n = 1; // подсчёт окон
    
    cin >> shir; // repeat
    int d = shir/10 + 1; // сколько надо окон
    cout << a;

    for (i = 1; i <= shir/4/d; i++) // пробел от стены
        cout << ' ';

    while (n <= d)
    {
        cout << '|';
        for (i = 1; i <= (shir - shir/4/d - shir/4/d - 2*d)/d; i++)
            cout << ' ';
        cout << '|';
        n++;
    }
    for (i = 1; i <= shir/4/d + (shir - shir/4/d - shir/4/d - 2*d) % d; i++)
        cout << ' ';
    cout << b;
    return 0;
}
