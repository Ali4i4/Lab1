#include <iostream>

using namespace std;

int main()
{
    string a, b;
    a = "   |";
    b = "|\n";
    int vvod;
    cin >> vvod;
    int i = 1;
    int n;
    while (i <= (vvod/2 - 2)) // (высота - 1) - последний ярус
    {
        cout << a;
            for (n = 1; n <= vvod; n++) // ширина ВСЯ!!!!!!!!
                cout << ' ';
        cout << b;
        i++;
    }
    cout << a;
    for (n = 1; n <= vvod; n++) // последний ярус
            cout << '_';
    cout << b;
    return 0;
}
